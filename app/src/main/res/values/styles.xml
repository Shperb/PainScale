<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Bright" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/blueBack</item>
        <item name="colorPrimaryDark">@color/Heirloom</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/Heirloom</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/Cosmo</item>
    </style>

    <style name="AppTheme.Test" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/blueBack</item>
        <item name="colorPrimaryDark">@color/Heirloom</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:windowBackground">@color/OrangeBody</item>

        <item name="android:textColor">@color/black</item>

        <item name="colorControlNormal">@color/iron</item>

        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/OrangeTitle</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/OrangeDark</item>
        <item name="colorPrimaryDark">#22397F</item>
        <item name="colorButtonNormal">@color/black</item>



    </style>

</resources>